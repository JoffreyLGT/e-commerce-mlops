// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/postgres
// Features to add to the dev container. More info: https://containers.dev/features.
{
	"name": "Dev-PrdClassification",
	"dockerComposeFile": "docker-compose.yml",
	"service": "project",
	"workspaceFolder": "/workspaces",
	"onCreateCommand": "./.devcontainer/onCreateCommand.sh",
	// Set workspace directory as safe
	"postAttachCommand": "git config --global --add safe.directory /workspaces",
	"shutdownAction":"stopCompose",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-azuretools.vscode-docker",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-pg",
				"ms-toolsai.jupyter",
				"ms-python.black-formatter",
				"njpwerner.autodocstring",
				"charliermarsh.ruff",
				"tamasfe.even-better-toml",
				"ms-python.mypy-type-checker"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"files.exclude": {
					"**/__pycache__": true,
					".pytest_cache": true,
					".ruff_cache": true,
					".mypy_cache": true
				},
				"sqltools.connections": [
					{
						"previewLimit": 50,
						"server": "localhost",
						"port": 5432,
						"driver": "PostgreSQL",
						"name": "App",
						"database": "product-classification",
						"username": "admin",
						"password": "changethis"
					}
				],
				"python.defaultInterpreterPath": ".venv/bin/python",
				"python.interpreter.infoVisibility": "always",
				"python.analysis.diagnosticMode": "openFilesOnly",
				"python.analysis.downloadStubs": true,
				"python.envFile": "/workspaces/.env",
				"python.testing.pytestArgs": [
					"/workspaces/backend/app"
				],
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				"python.analysis.typeCheckingMode": "basic",
				"editor.formatOnSave": true,
				"python.analysis.autoFormatStrings": true,
				"python.venvFolders": ["/workspaces/"],
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"editor.formatOnSave": true,
					"editor.codeActionsOnSave": {
						"source.organizeImports": true
					}
				  },
				"editor.defaultFormatter": "ms-python.black-formatter",
				"black-formatter.importStrategy": "fromEnvironment",
				"ruff.organizeImports": true,
				"ruff.args": [
					"--config=./pyproject.toml"
				],
				// 88 is the number chosen by Black formatter
				"editor.wordWrapColumn": 88,
				"editor.rulers": [
					88
				],
				"python.languageServer": "Pylance",
				"autoDocstring.docstringFormat": "google-notypes"
			}
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
	"forwardPorts": [
		5432,
		8000
	],
	"features": {
		// NodeJs
		"ghcr.io/devcontainers/features/node:1": {},
		// DirEnv to automatically load .env files
		"ghcr.io/christophermacgown/devcontainer-features/direnv:1": {}
	}
}