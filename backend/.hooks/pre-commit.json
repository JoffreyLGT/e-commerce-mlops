{
    "type": "python",
    "venvActivate": ".venv/bin/activate",
    "steps": [
        {
            "name": "Ruff linter",
            "command": "ruff {matchedFiles}",
            "onlyOn": "**/*.py"
        },
        {
            "name": "Black formatter",
            "command": "black --check {matchedFiles}",
            "onlyOn": "**/*.py"
        },
        {
            "name": "Mypy type checker",
            "command": "mypy {matchedFiles}",
            "onlyOn": "**/*.py"
        },
        {
            "name": "Pytest tests",
            "command": "scripts/start-tests.sh",
            "onlyOn": [
                "app/**/*.py",
                "datascience/**/*.py"
            ]
        }
    ]
}