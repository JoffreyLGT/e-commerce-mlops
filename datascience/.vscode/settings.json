{
    "python.defaultInterpreterPath": "${workspaceFolder:datascience}/.venv/bin/python",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.testing.pytestArgs": [
        "src"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "ruff.args": [
        "--extend-exclude=/**/Python.framework/**/*.py",
    ],
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        ".venv": true,
    },
    "black-formatter.importStrategy": "fromEnvironment",
}
